@model AMS202024111207.Models.Category

@{
    ViewData["Title"] = "资产类别详情";
}

<div class ="container mt-5 mb-5">
    <h3>@Model.CategoryName</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryId
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
    <!--详细页用于电影浏流览及管理浏览不同入口,故用Javascripit返回-->
    <a href="/Category/CategoryEdit?id=@Model.CategoryId" class="btn btn-primary">修改</a>
    <a href="javascript:history.back(-1)" class="btn btn-success">返回上一页</a>
</div>