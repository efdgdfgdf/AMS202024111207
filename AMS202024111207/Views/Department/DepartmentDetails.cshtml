@model AMS202024111207.Models.Department

@{
    ViewData["Title"] = "部门详情";
}

<div class="container mt-5 mb-5">
    <h3>@Model.DepartmentName</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentId)
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentId
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupervisorId)
        </dt>
        <dd class="col-sm-10">
            @Model.SupervisorId
        </dd>
    </dl>
    <!--详细页用于电影浏流览及管理浏览不同入口,故用Javascripit返回-->
    <a href="/Department/DepartmentEdit?id=@Model.DepartmentId" class="btn btn-primary">修改</a>
    <a href="javascript:history.back(-1)" class="btn btn-success">返回上一页</a>
</div>