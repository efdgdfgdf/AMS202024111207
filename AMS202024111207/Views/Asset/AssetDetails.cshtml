@model AMS202024111207.Models.Asset

@{
    ViewData["Title"] = "资产详情";
}

<div class="container mt-5 mb-5">
    <h3>@Model.AssetName</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetId)
        </dt>
        <dd class="col-sm-10">
            @Model.AssetId
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetName)
        </dt>
        <dd class="col-sm-10">
            @Model.AssetName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specification)
        </dt>
        <dd class="col-sm-10">
            @Model.Specification
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @(((DateTime)Model.PurchaseDate).ToString("yyyy年M月d日"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryId
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImgName)
        </dt>
        <dd class="col-sm-10">
            @Model.ImgName
        </dd>
        <dt class="col-sm-2">
            资产图片
        </dt>
        <dd class="col-sm-10">
            <a href="~/images/@Model.ImgName" data-fancybox data-caption="~ /images/@Model.ImgName">
				<img src="~/images/@Model.ImgName" alt="" style="width:415px;" />
			</a><br />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustodianId)
        </dt>
        <dd class="col-sm-10">
            @Model.CustodianId
        </dd>

    </dl>
    <!--详细页用于电影浏流览及管理浏览不同入口,故用Javascripit返回-->
    <a href="/Asset/AssetEdit?id=@Model.AssetId" class="btn btn-primary">修改</a>
    <a href="javascript:history.back(-1)" class="btn btn-success">返回上一页</a>
</div>
